                        <TapGestureRecognizer
                            Tapped="NationalStadium_Tapped"
                            NumberOfTapsRequired="1"/>
                    </Image.GestureRecognizers>
                    
                </Image>
                <Label Text="National Stadium" HorizontalTextAlignment="Center" FontAttributes="Bold"/>

                <Image x:Name="SingaporeIndoorStadium"
                       HeightRequest="300"
                       WidthRequest="300"
                       
                       >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                            Tapped="SingaporeIndoorStadium_Tapped"
                            NumberOfTapsRequired="1"/>
                        
                    </Image.GestureRecognizers>
                    
                </Image>
                <Label Text="Singapore Indoor Stadium" HorizontalTextAlignment="Center" FontAttributes="Bold"/>
            
                <Image x:Name="JalanBesar"
                       HeightRequest="300"
                       WidthRequest="300"
                       >
                    <Image.GestureRecognizers>
